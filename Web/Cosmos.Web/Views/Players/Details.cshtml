@model Cosmos.Web.ViewModels.Players.PlayerViewModel
@{
    this.ViewData["Title"] = "Player Details";
}
<h1>@this.ViewData["Title"]</h1>
<div class="row mt-2 mb-4">
    <div class="card col-6 col-lg-3 game-card">
        <img src="@Model.Image"
             class="card-img-top img-fluid card-image">
        <div class="card-body">
            <h5 class="card-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="Description:<br>@Model.Moto">
                @Model.PlayerName
            </h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">@Model.Moto</li>
                <li class="list-group-item">
                    <span class="attack-stat">@Model.Rank</span>
                    <span class="health-stat">@Model.Experience</span>
                </li>
            </ul>
            <a href="/Cards/AddToCollection?cardId=@Model.Id" class="btn btn-block btn-primary">Invite to Alliance</a>
        </div>
    </div>
</div>